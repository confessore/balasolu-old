<div class="card" style="width: auto">
    <div class="card-header bg-white">
        <h3 class="card-title text-center"><strong>@DiscriminatedUsername</strong></h3>
    </div>
    <div class="card-body">
        <div class="container-fluid">
            <EditForm Model="model" class="d-flex flex-column flex-wrap justify-content-center align-content-center">
                <div class="d-flex flex-row flex-wrap justify-content-start align-content-center">
                    <InputSelect @bind-Value="model.ItemType" class="p-2 m-2">
                        @foreach (var value in Enum.GetValues(typeof(ItemType)))
                        {
                            <option>@value</option>
                        }
                    </InputSelect>
                    <p class="card-text text-center p-2 m-2">type</p>
                </div>
            </EditForm>
        </div>
    </div>
</div>

@code {
    AccountCardModel model = new AccountCardModel();

    class AccountCardModel
    {
        public ItemType ItemType { get; set; }
    }

    [Parameter]
    public string? DiscriminatedUsername { get; set; }
}
