<EditForm Model="model" class="d-flex flex-column justify-content-center align-content-center">
    <p class="card-title text-center"><strong>choose an other type</strong></p>
    <div class="d-flex flex-row justify-content-center justify-content-center">
        <div class="text-center">
            <InputSelect @bind-Value="@model.ItemOtherTypeISO">
                @foreach (var value in Enum.GetValues<ItemOtherType>())
                {
                    <option value="@value">@value.GetDescription()</option>
                }
            </InputSelect>
        </div>
    </div>
    @if (model.ItemOtherTypeISO == ItemOtherType.Rune)
    {
        <ItemOtherRuneBuilderISO UserId="@UserId"
                                 ItemTypeFT="@ItemTypeFT"
                                 ItemOtherTypeFT="@ItemOtherTypeFT"
                                 ItemOtherRuneFT="@ItemOtherRuneFT"
                                 QuantityFT="@QuantityFT"
                                 ItemTypeISO="@ItemTypeISO"
                                 ItemOtherTypeISO="@model.ItemOtherTypeISO" />
    }
</EditForm>

@code {
    [Parameter]
    public string? UserId { get; set; }

    [Parameter]
    public ItemType ItemTypeFT { get; set; }

    [Parameter]
    public ItemOtherType ItemOtherTypeFT { get; set; }

    [Parameter]
    public ItemOtherRune ItemOtherRuneFT { get; set; }

    [Parameter]
    public int QuantityFT { get; set; }

    [Parameter]
    public ItemType ItemTypeISO { get; set; }

    ItemOtherBuilderISOModel model = new ItemOtherBuilderISOModel();

    class ItemOtherBuilderISOModel
    {
        public ItemOtherType ItemOtherTypeISO { get; set; }
        public bool Initialized { get; set; }
    }

    protected override void OnInitialized()
    {
        model.Initialized = true;
    }
}
