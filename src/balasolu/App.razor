<Router AppAssembly="@typeof(Program).Assembly" PreferExactMatches="@true">
    <Found Context="routeData">
        <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
            <NotAuthorized>
                <RedirectToLogin />
            </NotAuthorized>
        </AuthorizeRouteView>
    </Found>
    <NotFound>
        <CascadingAuthenticationState>
            <LayoutView Layout="@typeof(MainLayout)">
                <div class="container-fluid">
                    @*<div class="row justify-content-center">
                        <img src="https://avatars.githubusercontent.com/u/1919812?v=4" class="rounded-circle" style="max-height: 200px; max-width: 200px;" />
                    </div>*@
                    <br />
                    <h2 class="text-center">this page either just plain doesn't exist or recently moved to another location</h2>
                    <p class="text-center">we probably just have to wait for google to index our changes</p>
                </div>
            </LayoutView>
        </CascadingAuthenticationState>
    </NotFound>
</Router>
