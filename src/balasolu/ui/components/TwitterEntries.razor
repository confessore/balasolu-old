<div class="d-flex flex-wrap justify-content-center my-1 py-1">
    <div class="btn-group" role="group">
        <button type="button" class="btn btn-outline-primary" @onclick="async () => await GoToStartAsync()">
            <span class="oi oi-chevron-left"></span>
            <span class="oi oi-chevron-left"></span> newest
        </button>
        <button type="button" class="btn btn-outline-primary" @onclick="async () => await GoBackwardAsync()">
            <span class="oi oi-chevron-left"></span> newer
        </button>
        <button type="button" class="btn btn-outline-primary" @onclick="async () => await GoForwardAsync()">
            older <span class="oi oi-chevron-right"></span>
        </button>
        <button type="button" class="btn btn-outline-primary" @onclick="async () => await GoToEndAsync()">
            oldest <span class="oi oi-chevron-right"></span>
            <span class="oi oi-chevron-right"></span>
        </button>
    </div>
</div>
<div class="d-flex flex-wrap justify-content-center my-1 py-1">
    @if (model.Entries != null)
    {
        @foreach (var entry in model.Entries)
        {
            <TwitterCard Title="@entry.Title"
                Timestamp="@entry.Updated.ToString("M/d/yy @ HH:mm 'GMT'")"
                ImageSource="@GenerateImageSource((((TwitterEntry)entry).AuthorId))"
                Content="@entry.Content"
                Href="@GenerateEntryHref(@entry.Id)" />
        }
    }
</div>
<div class="d-flex flex-wrap justify-content-center my-1 py-1">
    <div class="btn-group" role="group">
        <button type="button" class="btn btn-outline-primary" @onclick="async () => await GoToStartAsync()">
