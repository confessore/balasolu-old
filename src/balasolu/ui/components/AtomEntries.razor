<div class="d-flex flex-wrap justify-content-center my-1 py-1">
    <div class="container">
        @if (model.Entries != null)
        {
            <div class="accordion" id="accordion" style="width: 100%">
                @foreach (var entry in model.Entries)
                {
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#@itemId(entry.Id!)">
                                <div class="d-flex flex-column">
                                    <strong><span class="oi oi-chevron-right"></span> @entry.Title</strong>
                                </div>
                            </button>
                        </h2>
                        <div id="@itemId(entry.Id!)" class="accordion-collapse collapse" data-bs-parent="#accordion">
                            <div class="accordion-body">
                                @if (entry.EntryType == EntryType.Default)
                                    @((MarkupString)@entry.Summary!)
                                @*@if (entry.EntryType == EntryType.Twitter)
                                    @((MarkupString)@entry.Content!)*@
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>
